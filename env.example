# Blog Configuration
BLOG_RSS_FEED_URL=https://blog.axonshield.com/feed.json

# Anthropic API Configuration (for content extraction)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# xAI Grok API Configuration (for image generation)
XAI_API_KEY=your_xai_api_key_here
GENERATE_IMAGES=true

# LinkedIn API Configuration
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_USER_ID=your_linkedin_user_id

# X (Twitter) API Configuration
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret
X_BEARER_TOKEN=your_x_bearer_token

# Database Configuration (stores posted content state)
DATABASE_PATH=./data/posts.db

# Schedule Configuration
POSTS_PER_BLOG=5

# Date Filtering Configuration
MINIMUM_POST_DATE=2025-10-15

